# Server Configuration
PORT=3000
NODE_ENV=development

# Session Configuration (REQUIRED)
# Generate a secure random string with: openssl rand -base64 32
# MUST be at least 32 characters long
SESSION_SECRET=your-secure-random-session-secret-here-min-32-chars

# Admin Panel Credentials (REQUIRED)
# MUST be set for production - no defaults allowed
# Admin password must be at least 8 characters
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-admin-password-here

# Redis Configuration
REDIS_URL=redis://localhost:6379

# CORS Configuration
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
